---
// Custom header component with navigation
import type { Props } from '@astrojs/starlight/props';
---

<div class="header-wrapper">
  <header class="header sl-flex">
    <div class="sl-flex">
      <a href="/zenith/" class="site-title sl-flex">
        âš¡ Zenith
      </a>
    </div>
    
    <div class="header-nav">
      <nav class="main-nav">
        <a href="/zenith/introduction/">Docs</a>
        <a href="/zenith/examples/hello-world/">Examples</a>  
        <a href="/zenith/api/application/">API</a>
      </nav>
      
      <div class="social-links">
        <a href="https://github.com/nijaru/zenith" target="_blank" rel="noopener" class="social-link">
          <span class="sr-only">GitHub</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20" astro-icon="social/github">
            <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
          </svg>
        </a>
      </div>
    </div>
  </header>
</div>

<style>
  .header-wrapper {
    background: var(--sl-color-bg-nav);
    border-bottom: 1px solid var(--sl-color-gray-6);
    position: relative;
    width: 100%;
    z-index: 1001;
  }

  .header {
    padding: 1.5rem 2rem;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--sl-color-text);
    text-decoration: none;
    align-items: center;
    gap: 0.75rem;
  }

  .site-title:hover {
    color: var(--sl-color-accent);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .main-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .main-nav a {
    color: var(--sl-color-text);
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1.25rem;
    border-radius: 0.375rem;
    transition: all 0.2s;
    font-size: 1rem;
  }

  .main-nav a:hover {
    background-color: var(--sl-color-bg-sidebar);
    color: var(--sl-color-accent);
  }

  .social-links {
    display: flex;
    align-items: center;
  }

  .social-link {
    color: var(--sl-color-text);
    padding: 0.5rem;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  .social-link:hover {
    color: var(--sl-color-accent);
    background-color: var(--sl-color-bg-sidebar);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Hide default Starlight header to prevent double header */
  :global(.sl-header) {
    display: none !important;
  }

  /* Hide main nav on small screens */
  @media (max-width: 768px) {
    .main-nav {
      display: none;
    }
    
    .header-nav {
      gap: 1rem;
    }
  }
</style>